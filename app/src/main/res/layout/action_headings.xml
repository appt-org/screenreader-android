<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Instructions -->
        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView1"
            android:text="@string/action_headings_instruction1" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView2"
            android:text="@string/action_headings_instruction2" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView3"
            android:text="@string/action_headings_instruction3" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView4"
            android:text="@string/action_headings_instruction4" />

        <!-- Heading 1 -->
        <app.screenreader.views.actions.HeadingTextView style="@style/Widget.TextView.Training.Bold"
            android:id="@+id/textView5"
            android:text="@string/action_headings_heading1" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView6"
            android:text="@string/action_headings_skip" />

        <!-- Heading 2 -->
        <app.screenreader.views.actions.HeadingTextView style="@style/Widget.TextView.Training.Bold"
            android:id="@+id/textView7"
            android:text="@string/action_headings_heading2" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView8"
            android:text="@string/action_headings_skip" />

        <!-- Heading 3 -->
        <app.screenreader.views.actions.HeadingTextView style="@style/Widget.TextView.Training.Bold"
            android:id="@+id/textView9"
            android:text="@string/action_headings_heading3" />

        <TextView style="@style/Widget.TextView.Training"
            android:id="@+id/textView10"
            android:text="@string/action_headings_skip" />
    </LinearLayout>
</ScrollView>